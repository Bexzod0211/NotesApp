<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_actions">

    <ImageView
        android:id="@+id/btn_hide"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_down"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:background="?selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_hide"
        android:orientation="horizontal"
        android:background="?selectableItemBackground"
        android:id="@+id/btn_restore"
        android:gravity="center|start"
        >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_restore"
            android:layout_marginStart="16dp"
            app:tint="#DB4E4F" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restore note"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_restore"
        android:orientation="horizontal"
        android:background="?selectableItemBackground"
        android:id="@+id/btn_pin"
        android:gravity="center|start"
        >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_pin"
            android:layout_marginStart="16dp"
            app:tint="#DB4E4F" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pin/Unpin"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_pin"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="?selectableItemBackground"
        android:gravity="center|start"
        android:id="@+id/btn_change_color">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_palette"
            android:layout_marginStart="16dp"
            app:tint="#DB4E4F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change color"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_change_color"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="?selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="28dp"
        android:gravity="center|start"
        android:id="@+id/btn_delete">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_delete"
            android:layout_marginStart="16dp"
            app:tint="#DB4E4F" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete note"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>